{
  "parser": "babel-eslint",
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "env": {
      "browser": true,
      "commonjs": true,
      "node": true,
      "es6": true,
      "jest": true
  },
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true,
          "experimentalObjectRestSpread": true
      }
  },
  "rules": {
      "semi": [2, "always"],
      "curly": [2, "multi-line"],
      "no-console": "off",
      "strict": [
          "error",
          "global"
      ]
  },
  "globals": {
      "it": true,
      "xit": true,
      "describe": true,
      "beforeEach": true,
      "afterEach": true,
      "expect": true
    }
}